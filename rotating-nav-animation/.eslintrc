{
    "root": true,
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        },
        "project": "tsconfig.json"
    },
    "env": {
        "browser": true,
        "node": true,
        "shared-node-browser": true,
        "worker": true,
        "serviceworker": true,
        "webextensions": true,
        "es2022": true
    },
    "extends": ["rehberbey", "prettier"],
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "ignorePatterns": ["dist/js"]
}
